                    </button>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header py-8 px-8">
                    <h2 class="heading-secondary">
                        STEM Application
                    </h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body pt-8 px-8">
                    <form method="POST" action="/send/modal">
                        <div class="form__group">
                            <label class="pb-8 w-full">
                                Are you apply Cross-Boundary? *
                            </label>
                            <div class="form__radio-group">
                                <input type="radio" class="form__radio-input" id="yes" name="crossBoundaryYes">
                                <label for="yes" class="form__radio-label">
                                    <span class="form__radio-button"></span>
                                    Yes
                                </label>
                            </div>
                            <div class="form__radio-group">
                                <input type="radio" class="form__radio-input" id="no" name="crossBoundaryNo">
                                <label for="no" class="form__radio-label">
                                    <span class="form__radio-button"></span>
                                    No
                                </label>
                            </div>
                        </div>

                        <!-- Full name -->
                        <div class="form__group">
                            <label for="name" class="">Name *</label>
                            <input name="name" type="text" class="form__input" placeholder="Full name" id="name"
                                required>
                        </div>

                        <!-- PEN -->
                        <div class="form__group">
                            <label for="PEN" class="">PEN *</label>
                            <input name="PEN" type="text" class="form__input"
                                placeholder="9 digit Ministry Personal Education Number" id="PEN" minlength="9"
                                maxlength="9" required>
                        </div>

                        <!-- Birthdate -->
                        <div class="form__group">
                            <label for="bdate" class="">Birthdate *</label>
                            <div class="flex flex-wrap" id="bdate">
                                <input name="mm" type="text" class="form__input mr-4 form__input--small"
                                    placeholder="MM" minlength="2" maxlength="2" required>
                                <input name="dd" type="text" class="form__input mr-4 form__input--small"
                                    placeholder="DD" minlength="2" maxlength="2" required>
                                <input name="yyyy" type="text" class="form__input mr-4 form__input--small"
                                    placeholder="YYYY" minlength="4" maxlength="4" required>
                            </div>
                        </div>

                        <!-- Home Address -->
                        <div class="form__group">
                            <label for="address" class="">Home address</label>
                            <input name="address" type="text" class="form__input" placeholder="Home address"
                                id="address">
                        </div>

                        <!-- Parent/Guardian -->
                        <div class="form__group">
                            <label for="guardian" class="">Parent/Guardian</label>
                            <input name="guardian" type="text" class="form__input" placeholder="Parent/Guardian"
                                id="guardian">
                        </div>

                        <!-- Phone Number -->
                        <div class="form__group">
                            <label for="num" class="">Phone Number</label>
                            <div class="flex flex-wrap" id="num">
                                <input name="num1" type="tel" class="form__input mr-4 form__input--small"
                                    placeholder="###" minlength="3" maxlength="3">
                                <input name="num2" type="tel" class="form__input mr-4 form__input--small"
                                    placeholder="###" minlength="3" maxlength="3">
                                <input name="num3" type="tel" class="form__input mr-4 form__input--small"
                                    placeholder="####" minlength="4" maxlength="4">
                            </div>

                        </div>
                        <!-- Email Addresses -->
                        <div class="form__group pb-16">
                            <label for="email" class="">Email</label>
                            <div id="email">
                                <input name="parentEmail" type="email" class="form__input mb-8"
                                    placeholder="Parent Email">
                                <input name="studentEmail" type="email" class="form__input"
                                    placeholder="Student Email">
                            </div>

                        </div>
                        <div class="modal-footer py-8 px-8">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

